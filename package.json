{
  "name": "universal_react_redux_boilerplate",
  "description": "Boilerplate for a universal React/Redux app",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "Rob Lee <rob@nodeworks.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=development babel-watch server/index.js",
    "start:prod": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "pm2": "pm2 start yarn --name React -- serve",
    "build": "npm-run-all --parallel build:client build:server --serial build:node",
    "build:client": "rimraf client && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf dist && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel server/index.js -o dist/index.js && babel server/api.js -o dist/api.js",
    "test": "mocha -c test/.setup.js ./src/**/*.spec.js",
    "analyze": "flow check || true",
    "suite": "npm-run-all --parallel test analyze lint",
    "clean": "rimraf client dist",
    "cm": "git-cz",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --single-quote --semi=false --write '{src}/**/*.js' && yarn lint",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-polyfill": "^6.23.0",
    "bootstrap": "4.0.0-alpha.6",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "chart.js": "^2.6.0",
    "classnames": "^2.2.5",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "default-passive-events": "^0.1.1",
    "ejs": "^2.5.7",
    "express": "^4.15.3",
    "fetch-everywhere": "^1.0.5",
    "firebase": "^4.3.0",
    "font-awesome": "^4.7.0",
    "history": "^4.6.3",
    "lodash": "^4.17.4",
    "object-assign": "^4.1.1",
    "pm2": "^2.6.1",
    "promise": "^8.0.1",
    "prop-types": "^15.5.10",
    "proptypes": "^1.1.0",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-addons-transition-group": "^15.6.0",
    "react-chartjs-2": "^2.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.2.0",
