    "react-universal-component": "^2.5.0",
    "reactstrap": "^4.8.0",
    "redbox-react": "^1.5.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^1.9.15",
    "redux-first-router-link": "^1.1.4",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "simple-line-icons": "^2.4.1",
    "transition-group": "^0.0.1",
    "trim": "^0.0.1",
    "webpack-flush-chunks": "^1.1.22"
